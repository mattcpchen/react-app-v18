{
    "include": [
        "src/**/*",
        "custom.d.ts"
    ],
    "compilerOptions": {
        "strict": true,
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "es6",
        "target": "es5",
        "jsx": "react-jsx",
        "lib": [
            "dom",
            "es2015"
        ],
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "Node"
    }
}